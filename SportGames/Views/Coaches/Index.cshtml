@model IEnumerable<SportGames.Models.Coach>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<p>
    @Html.ActionLink("Create New", "Create",null, new { @style = "color:white;" })
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Wins)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Losses)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.ImgURL)
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Wins)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Losses)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.ImgURL)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id = item.CoachId }) |
            @Html.ActionLink("Details", "Details", new { id = item.CoachId }) |
            @Html.ActionLink("Delete", "Delete", new { id = item.CoachId })
        </td>
    </tr>
}

</table>
